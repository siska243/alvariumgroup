{% extends 'base.account.html.twig' %}


{% block title %}Ville{% endblock %}

{% block body %}
    <h1>Ville</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ville.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ ville.title }}</td>
            </tr>
            <tr>
                <th>Zip</th>
                <td>{{ ville.zip }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ ville.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ ville.createdAt ? ville.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ ville.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ville_index') }}">back to list</a>

    <a href="{{ path('app_ville_edit', {'id': ville.id}) }}">edit</a>

    {{ include('ville/_delete_form.html.twig') }}
{% endblock %}
