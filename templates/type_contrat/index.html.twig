{% extends 'base.account.html.twig' %}


{% block title %}TypeContrat index{% endblock %}

{% block body %}
    <h1>TypeContrat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Color</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_contrat in type_contrats %}
            <tr>
                <td>{{ type_contrat.id }}</td>
                <td>{{ type_contrat.title }}</td>
                <td>{{ type_contrat.color }}</td>
                <td>{{ type_contrat.description }}</td>
                <td>{{ type_contrat.createdAt ? type_contrat.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_type_contrat_show', {'id': type_contrat.id}) }}">show</a>
                    <a href="{{ path('app_type_contrat_edit', {'id': type_contrat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_type_contrat_new') }}">Create new</a>
{% endblock %}
