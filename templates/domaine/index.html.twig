{% extends 'base.account.html.twig' %}



{% block title %}Domaine index{% endblock %}

{% block body %}

<div class="d-flex justify-content-between mb-5">
<h1 class="mb-0">Domaine</h1>

	<a href="{{ path('app_domaine_new') }}" class="btn btn-primary">Nouveau domaine</a>
</div>

    <h1></h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>IsActive</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for domaine in domaines %}
            <tr>
                <td>{{ domaine.id }}</td>
                <td>{{ domaine.title }}</td>
                <td>{{ domaine.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ domaine.createdAt ? domaine.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_domaine_show', {'id': domaine.id}) }}">show</a>
                    <a href="{{ path('app_domaine_edit', {'id': domaine.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
